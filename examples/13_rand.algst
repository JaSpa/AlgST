protocol Repeat (x:P) = More x (Repeat x) | Quit

type Seed : MU = Int
type RNG  : SL = !Repeat -Int.End!

seedRNG : Seed -> RNG

randPair : Seed -> (Int, Int)
randPair seed =
  let c = seedRNG seed in
  let (a, c) =
    select More [-Int, End!] c
      |> receive [Int, !Repeat -Int.End!]
  in
  let (b, c) =
    select More [-Int, End!] c
      |> receive [Int, !Repeat -Int.End!]
  in
  let _ = terminate <| select Quit [-Int, End!] c in
  (a, b)
